    <div class="login-container">

        <br>

        <!-- Jumbotron -->
        <div class="jumbotron">
            <h1 class="text-center">Login in to recieve your ticket.</h1>
        </div>

        <div class="row">

            <!-- Sign-Up Card-->
            <div class="col-md-6">
                <div class="card card-default">
                    <div class="card-header">
                        New Rider Register
                    </div>
                    <div class="card-body">

                        <!-- Sign-up Form (note the various input "types")-->

                        <form role="form">
                            <div class="form-group row">
                                <label for="name-input">Name:</label>
                                <input class="form-control" id="name-input" type="text">
                            </div>
                            <div class="form-group row">
                                <label for="password-input">Password:</label>
                                <input class="form-control" id="password-input" type="password">
                            </div>
                            <button class="btn btn-warning my-2 my-sm-0" id="add-user" type="submit">Submit</button>
                        </form>

                    </div>

                </div>

            </div>

            <div class="col-md-6">
                <div class="card card-default">
                    <div class="card-header">
                        Returning Rider Login
                    </div>
                    <div class="card-body">

                        <!-- Sign-up Form (note the various input "types")-->

                        <form role="form">
                            <div class="form-group row">
                                <label for="name-input">Name:</label>
                                <input class="form-control" id="name-input" type="text">
                            </div>
                            <div class="form-group row">
                                <label for="password-input">Password:</label>
                                <input class="form-control" id="password-input" type="password">
                            </div>
                            <button class="btn btn-warning my-2 my-sm-0" id="add-user" type="submit">Submit</button>
                        </form>
                    </div>

                </div>

            </div>
        </div>

